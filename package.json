{
  "name": "true-heat",
  "version": "1.0.0",
  "private": true,
  "description": "PWA for True Heat Solutions Claims",
  "config": {
    "serve": {
      "domain": "localhost",
      "path": "./",
      "port": 8000
    },
    "dir": {
      "css": "css/",
      "js": "js/ components/",
      "img": "img/",
      "html": "./"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/true-heat-solutions/claims-pwa"
  },
  "keywords": [
    "static",
    "template",
    "ecmascript",
    "javascript",
    "css",
    "svg",
    "icons"
  ],
  "author": "Chris Zuber <shgysk8zer0@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/true-heat-solutions/claims-pwa/issues"
  },
  "homepage": "https://deploy-preview-3--competent-golick-08a09d.netlify.com/",
  "scripts": {
    "preinstall": "git submodule update --recursive --init",
    "start": "npm run netlify:serve",
    "test": "npm run lint:js && npm run lint:css",
    "fix": "npm run fix:js && npm run fix:css",
    "build": "npm run build:icons",
    "build:icons": "svg-sprite-generate -c icons.csv -o img/icons.svg",
    "lint:css": "stylelint ${npm_package_config_dir_css}",
    "lint:js": "eslint ${npm_package_config_dir_js}",
    "fix:css": "stylelint ${npm_package_config_dir_css} --fix",
    "fix:js": "eslint ${npm_package_config_dir_js} --fix",
    "netlify:deploy": "netlify deploy",
    "netlify:serve": "netlify dev",
    "netlify:live": "netlify dev --live"
  },
  "dependencies": {
    "svg-sprite-generator": "0.0.7"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-async-await": "0.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "netlify-cli": "^2.17.0",
    "stylelint": "^10.0.1",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-standard": "^18.3.0",
    "svgo": "^1.2.2"
  }
}
